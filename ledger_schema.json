    "properties": {
      "receipt_type": {
        "type": "string",
        "description": "Type of receipt"
      },
      "ts": {
        "type": "string",
        "format": "date-time",
        "description": "ISO8601 timestamp"
      },
      "tenant_id": {
        "type": "string",
        "const": "trumpproof",
        "description": "Tenant identifier"
      },
      "payload_hash": {
        "type": "string",
        "pattern": "^[a-f0-9]{64}:[a-f0-9]{64}$",
